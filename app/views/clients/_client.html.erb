<div id="<%= dom_id client %>">
  <p>
    <strong>Name:</strong>
    <%= client.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= client.email %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= client.location %>
  </p>

  <p>
    <strong>Tags:</strong>
    <% client.tags.each do |tag| %>
        <%= link_to tag do %>
          <span><%= tag.name %></span>
        <% end %>
    <% end %>
  </p>

</div>
